@model CreateSliderItemVM
@{
    ViewData["Title"] = "Create";
}
<form action="" method="post">

    <div class="form-group">
        <label asp-for="ImageUrl"></label>
        <input asp-for="ImageUrl" class=" form-control">
        <span asp-validation-for="ImageUrl" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control">
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Text"></label>
        <input asp-for="Text" class="form-control">
        <span asp-validation-for="Text" class="text-danger"></span>
    </div>
    <span>IsLeft</span>
    <div class="form-group">
        <label for="left">Left</label>
        <input asp-for="IsLeft" value="1" type="radio" id="left" >
        <label for="right">Right</label>
        <input asp-for="IsLeft" value="0" type="radio" id="right" >
        <span asp-validation-for="IsLeft" class="text-danger"></span>
    </div>
    <span>IsRightText</span>
    <div class="form-group">
        <label for="right">Right</label>
        <input asp-for="IsRightText" value="1" type="radio" id="right">
        <label for="left">Left</label>
        <input asp-for="IsRightText" value="0" type="radio" id="left">
        <span asp-validation-for="IsRightText" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
